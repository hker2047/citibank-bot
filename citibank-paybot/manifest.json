{
  "manifest_version": 2,
  "name": "Citi Paybot",
  "description": "Pay bills through Citi bank e-banking as you wish",
  "version": "1.0.0",
  "icons": {
    "128": "icon-active.png"
  },
  "background": {
    "scripts": [
      "citibank-driver.js",
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon-idle.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}
